<launch>

      <arg name="gui" default="false" />

      <group if="$(var gui)">
  	<node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui">
		<param name="publish_default_efforts" value="True"/>
		<param name="use_gui" value="$(var gui)"/>
		<param name="rate" value="50.0"/>
     	</node>

     </group>
     
    <!-- start robot state publisher -->
    <arg name="robot" default="g1_23dof.urdf"/>
    
    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" output="screen" args="--ros-args --log-level ERROR">
        <param name="publish_frequency" value="250.0" />
        <param name='robot_description' type="str" value="$(command 'xacro $(find-pkg-share hurobots)/description_files/urdf/$(var robot)')"/>
    </node> 

</launch>
